
<div class="btn-toolbar list-toolbar">
    <button class="btn btn-primary"> {$title}</button>
</div>
<table class="table" >
  <thead>
    <tr>
      <th>序号</th>
      <th>标题</th>
      <th>内容简介</th>
      <th>作者</th>
      <th>前台显示</th>
      <th>时间</th>
      <th style="width: 3.5em;">操作</th>
    </tr>
  </thead>
  <tbody>
  
  <volist name="news" id="vo" empty="暂时没有数据"  offset="0" length='10' key="k">
    <tr>
      <td>{$k}</td>
      <td>{$vo['title']}</td>
      <td>{$vo['subtitle']}</td>
      <td>{$vo['author']}</td>
      <td> <if condition="($vo['state'] eq 0)">显示</if> 
		  <if condition="($vo['state'] eq 1)">不显示</if> </td>
      <td>{$vo['creat_time']}</td>
      <td>
          <a href="{:U('nedit',array('nid'=>$vo['id']))}"><i class="fa fa-pencil"></i></a>
          <a href="{:U('ndelete',array('nid'=>$vo['id']))}" onclick="return del()" role="button" data-toggle="modal"><i class="fa fa-trash-o"></i></a>
      </td>
    </tr>
    </volist>
  </tbody>
</table>


